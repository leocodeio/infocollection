{
  "version": 2,
  "installCommand": "pnpm install --shamefully-hoist",
  "buildCommand": "pnpm build && mkdir -p api && cp dist/main.js api/index.js",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "api/index.js"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ]
}
